
body
  font-family: "sl-Apres", sans-serif
  background-color: white
  box-sizing: border-box
  margin: 0 auto
  padding: 0
  width: 80%

  header
    h1
      font-family: sl-TitlingGothicFBCondensed, helvetica, sans-serif
      font-size: 300%
      font-weight: bold

  div#content
    margin: 20px auto

    div#editorContainer
      width: 80%
      margin: 0 auto

      i
        font-family: 'FontAwesome' !important
        speak: none
        font-style: normal
        font-weight: normal
        font-variant: normal
        text-transform: none
        line-height: 1
        display: inline-block
        -webkit-font-smoothing: antialiased
        -moz-osx-font-smoothing: grayscale

      .a-bold:before
          content: "\f032"
      .a-italic:before
          content: "\f033"
      .a-underline:before
          content: "\f0cd"
      .a-code:before
          content: "\f121"
      .a-link:before
          content: "\f0c1"
      .a-unordered-list:before
          content: "\f0ca"
      .a-ordered-list:before
          content: "\f0cb"
      .a-quote:before
          content: "\f03c"
      .a-photo:before
          content: "\f1c5"
      .a-menu:before
          content: "\f0c9"

      .editor
        position: relative
        top: 0
        right: 0
        bottom: 0
        left: 0
        margin: 50px auto
        padding: 25px
        font-size: 18px
        outline: 1px solid #eee

        .paragraph
          margin-bottom: 1.5rem

        blockquote
          margin-left: 0px
          padding-left: 21px
          border-left: 3px solid #ccc

        img
          max-width: 100%

    .toolbar
      position: absolute
      z-index: 9999
      height: 35px
      cursor: default

      .side
        top: -32px
        left: -48px

      .image
        top: 7px
        left: 50%
        height: 40px
        margin-left: -50px


        .toolbar-icons .toolbar-icon
          width: 40px
          max-width: 40px

        .toolbar-icons .toolbar-icon i
          font-size: 2.3rem

      .toolbar-icons
        position: absolute
        z-index: 1
        display: flex
        align-items: center
        justify-content: space-between
        list-style: none
        height: 100%
        margin: 0
        padding: 0
        background: linear-gradient(to bottom, #f5f5f5 0%, #ededed 100%)
        border: 1px solid rgba(0, 0, 0, 0.05)
        border-top-right-radius: 5px
        border-top-left-radius: 5px
        box-shadow: 0 0 25px -4px rgba(0, 0, 0, 0.25)

        .toolbar-icon
          display: flex
          align-items: center
          justify-content: center
          height: 100%
          width: 35px
          max-width: 35px
          color: #444
          font-size: 1.4rem
          border-bottom: 3px solid #444
          transition: all 0.15s linear
          cursor: pointer

          &:first-child
            border-bottom-left-radius: 3px

          &:last-child
            border-bottom-right-radius: 3px

          &:hover,
          .active
            color: #c95339
            border-color: #c95339

            i
              color: #c95339

          i
            margin: 0
            padding: 0
            color: #777
            font-size: 1.2rem

        &:after
          content: ""
          position: absolute
          bottom: -5px
          left: 50%
          margin-left: -5px
          border-top: 5px solid #444
          border-right: 5px solid transparent
          border-left: 5px solid transparent

    .side-toolbar
      position: absolute
      top: 25px
      right: 0
      bottom: 0
      left: -50px
      width: 70px

    .side-toolbar i
      margin-right: 10px
      color: rgba(0, 0, 0, 0.2)
      font-size: 20px
      cursor: pointer
      vertical-align: middle

    .side-toolbar i.a-menu
      font-size: 22px

    .linkEditor
      position: absolute
      z-index: 9999
      cursor: default







    div.markupPreview
      outline: 1px solid #eee
      margin: 0 auto
      padding: 25px
      font-family: monospace
      font-size: 14px
      white-space: pre
